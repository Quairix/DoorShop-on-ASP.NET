@inject IViewLocalizer Localizer
@model LoginViewModel
@{
    ViewBag.Title = Localizer["Title"];
}
@section scripts {
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="herounit herounit-secondary" style="background-image: url('/img/bannerimage-products.png');">
    <div class="container fullHeight">
        <div class="row fullHeight">
            <div class="herounit-wrapper fullHeight col-xs-12">
                <div class="herounit-wrap txt-center">
                    <h1 class="page_title">@Localizer["Title"]</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" style="margin:10%;">
    <div class="col-md-4 col-md-offset-4">
        <div style="margin-bottom:2%;" align="right">
            <p>
                @Localizer["Desc1"] <a style="color:blue;" onClick='location.href="../Register"'>@Localizer["Register"]</a>.
            </p>
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username">@Localizer["Username"]:</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">@Localizer["Password"]:</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div align="right" class="row">
                <div class="form-group" style="display:inline-block; margin:2%;">
                    <input type="submit" value="@Localizer["Login"]" class="btn btn-secondary" />
                </div>
            </div>
        </form>
    </div>
</div>